{
    "compilerOptions": {
        "experimentalDecorators": true,
        "resolveJsonModule": true,
        "module": "commonjs",
        "target": "es6",
        "outDir": "out",
        "lib": [
           "es6",
           "es2020.string"
        ],
        "sourceMap": true,
        "alwaysStrict": true,
        "rootDir": "./",
        "noImplicitAny": true,
        "strictNullChecks": true
    },
    "include": [
        "src/**/*", "test/suite/**/*"
    ],
    "exclude": ["node_modules", ".vscode-test"]
}
