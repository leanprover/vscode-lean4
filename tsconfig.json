{
    "compilerOptions": {
		"experimentalDecorators": true,
		"resolveJsonModule": true,
        "module": "commonjs",
        "target": "es6",
        "outDir": "out",
        "lib": [
			"es6",
			"es2020.string"
        ],
        "sourceMap": true,
        "alwaysStrict": true,
        "rootDir": "./src",
        "jsx": "preserve",
        "typeRoots": [
            "./node_modules/@types",
            "./src/typings"
        ]
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        ".vscode-test"
    ]
}